graph TD
    start([Start]) --> check_electrical_cables
    
    subgraph check_electrical_cables
        check_electrical_cables{{"Check <font color='pink'>Electrical Cables</font>"}}
        check_electrical_cables --> check_diameter
        
        check_diameter{{"Is <font color='blue'>Outer Diameter</font> <= 20mm<br>AND<br><font color='blue'>Conductor Cross-Section</font> <= 2.5mmÂ²?"}}
        check_diameter -->|Yes| check_ph60
        check_diameter -->|No| check_rf1h
        
        check_ph60{{"Does cable have<br><font color='blue'>Intrinsic Fire Resistance</font><br>>= PH 60 per NBN EN 50200?"}}
        check_ph60 -->|Yes| pass_cable
        check_ph60 -->|No| fail_cable
        
        check_rf1h{{"Does cable have<br><font color='blue'>Intrinsic Fire Resistance</font><br>>= Rf 1h per NBN 713-020 add. 3?"}}
        check_rf1h -->|Yes| pass_cable
        check_rf1h -->|No| check_conduit
        
        check_conduit{{"Is cable in conduit with<br><font color='blue'>Fire Resistance</font><br>>= Rf 1h per NBN 713-020 add. 3?"}}
        check_conduit -->|Yes| pass_cable
        check_conduit -->|No| check_function
        
        check_function{{"Does installation/device<br>function without power supply?"}}
        check_function -->|Yes| pass_cable
        check_function -->|No| fail_cable
        
        pass_cable[/"Cable passes fire resistance check"/]
        fail_cable[/"Cable fails fire resistance check"/]
    end
    
    check_electrical_cables --> check_installations
    
    subgraph check_installations
        check_installations{{"Check <font color='pink'>Installations</font>"}}
        check_installations --> check_safety_lighting
        check_installations --> check_alarm_systems
        check_installations --> check_smoke_extraction
        check_installations --> check_water_pumps
        check_installations --> check_special_elevators
        
        check_safety_lighting{{"Is <font color='pink'>Safety Lighting</font> present?"}}
        check_safety_lighting -->|Yes| pass_safety_lighting
        check_safety_lighting -->|No| fail_safety_lighting
        
        check_alarm_systems{{"Are <font color='pink'>Alarm Systems</font> present?"}}
        check_alarm_systems -->|Yes| pass_alarm_systems
        check_alarm_systems -->|No| fail_alarm_systems
        
        check_smoke_extraction{{"Is <font color='pink'>Smoke Extraction System</font> present?"}}
        check_smoke_extraction -->|Yes| pass_smoke_extraction
        check_smoke_extraction -->|No| fail_smoke_extraction
        
        check_water_pumps{{"Are <font color='pink'>Fire Fighting Water Pumps</font> present?"}}
        check_water_pumps -->|Yes| pass_water_pumps
        check_water_pumps -->|No| fail_water_pumps
        
        check_special_elevators{{"Are <font color='pink'>Special Elevators</font> as per point 6.4 present?"}}
        check_special_elevators -->|Yes| pass_special_elevators
        check_special_elevators -->|No| fail_special_elevators
        
        pass_safety_lighting[/"Safety Lighting check passed"/]
        fail_safety_lighting[/"Safety Lighting check failed"/]
        pass_alarm_systems[/"Alarm Systems check passed"/]
        fail_alarm_systems[/"Alarm Systems check failed"/]
        pass_smoke_extraction[/"Smoke Extraction System check passed"/]
        fail_smoke_extraction[/"Smoke Extraction System check failed"/]
        pass_water_pumps[/"Water Pumps check passed"/]
        fail_water_pumps[/"Water Pumps check failed"/]
        pass_special_elevators[/"Special Elevators check passed"/]
        fail_special_elevators[/"Special Elevators check failed"/]
    end
    
    pass_cable --> end_check
    fail_cable --> end_check
    pass_safety_lighting & pass_alarm_systems & pass_smoke_extraction & pass_water_pumps & pass_special_elevators --> end_check
    fail_safety_lighting & fail_alarm_systems & fail_smoke_extraction & fail_water_pumps & fail_special_elevators --> end_check
    
    end_check([End])

style start fill:#f9f,stroke:#333,stroke-width:2px
style end_check fill:#f9f,stroke:#333,stroke-width:2px