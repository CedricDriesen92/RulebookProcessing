graph TD
    start(["Start"])
    --> check_structural_element{{"Check <font color='pink'>Beam</font>, <font color='pink'>Column</font>, or <font color='pink'>Wall</font>"}}
    check_structural_element --> is_roof_element{"Is roof element?"}
    is_roof_element -->|Yes| check_floors{"How many floors above Ei?"}
    is_roof_element -->|No| check_location{"Location relative to Ei?"}
    
    check_floors -->|One floor| check_internal_protection{"Has internal EI 30 protection?"}
    check_internal_protection -->|Yes| no_requirement["No fire resistance requirement"]
    check_internal_protection -->|No| require_R30["Require R 30"]
    
    check_floors -->|Multiple floors| check_internal_protection_multi{"Has internal EI 30 protection?"}
    check_internal_protection_multi -->|Yes| no_requirement
    check_internal_protection_multi -->|No| require_R30
    
    check_location -->|Above Ei| check_floors_non_roof{"How many floors above Ei?"}
    check_floors_non_roof -->|One floor| require_R30_non_roof["Require R 30"]
    check_floors_non_roof -->|Multiple floors| require_R60["Require R 60"]
    
    check_location -->|At or below Ei| require_R60
    
    no_requirement --> end(["End"])
    require_R30 --> end
    require_R60 --> end
    require_R30_non_roof --> end

