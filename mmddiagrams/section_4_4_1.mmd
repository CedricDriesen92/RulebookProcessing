flowchart TD
    S1["Start: Evacuation Path Check"] --> A{"For each <a href='http://example.com/firebimbuilding#Compartment' style='color:pink;'>Compartment</a>"}
    A --> B{"Is <a href='http://example.com/firebimbuilding#HasDaytimeOccupancy' style='color:blue;'>Has daytime occupancy</a> true?"}
    B -- Yes --> C{"Check all points in compartment"}
    B -- No --> D{"Check all points in compartment"}
    C --> E{"Distance to evacuation path connecting exits ≤ 30 m?"} & F{"Distance to nearest exit ≤ 45 m?"} & G{"Distance to second exit ≤ 80 m?"}
    D --> H{"Distance to evacuation path connecting exits ≤ 20 m?"} & I{"Distance to nearest exit ≤ 30 m?"} & J{"Distance to second exit ≤ 60 m?"}
    E & F & G -- All Yes --> K[/"Pass"/]
    E & F & G -- Any No --> L[/"Fail"/]
    H & I & J -- All Yes --> M[/"Pass"/]
    H & I & J -- Any No --> N[/"Fail"/]
    A --> O{"Check dead-end evacuation paths"}
    O --> P{"Length of dead-end paths ≤ 15 m?"}
    P -- Yes --> Q[/"Pass"/]
    P -- No --> R[/"Fail"/]
    A --> S{"Check <a href='http://example.com/firebimbuilding#UsefulWidth' style='color:blue;'>Useful width</a> of evacuation paths"}
    S --> T{"<a href='http://example.com/firebimbuilding#UsefulWidth' style='color:blue;'>Useful width</a> of evacuation paths and doors ≥ 0.80 m?"}
    T -- Yes --> U{"<a href='http://example.com/firebimbuilding#UsefulWidth' style='color:blue;'>Useful width</a> of escape terraces ≥ 0.60 m?"}
    U -- Yes --> V[/"Pass"/]
    U -- No --> W[/"Fail"/]
    T -- No --> W
    A --> X{"Is <a href='http://example.com/firebimbuilding#Parking' style='color:pink;'>Parking</a>?"}
    X -- Yes --> Y["Refer to section 5.2"]
    X -- No --> Z{"Check compartment exits"}
    Z --> AA{"Is exit an internal staircase compliant with 4.2?"} & AB{"Is exit an external staircase compliant with 4.3?"} & AC{"Is exit a direct access to open air at evacuation level?"} & AD{"Is exit an evacuation route at evacuation level?"}
    AA & AB & AC -- Any Yes --> AE[/"Pass"/]
    AD --> AF{"Do vertical inner walls have EI 60?"} & AG{"Are doors to this route self-closing or self-closing in case of fire with EI1 30?"}
    AF & AG -- All Yes --> AE
    AF & AG -- Any No --> AH[/"Fail"/]
    AA & AB & AC & AD -- All No --> AH
    A --> AI{"Check doors on evacuation routes"}
    AI --> AJ{"Are doors free from locks that could hinder evacuation?"}
    AJ -- Yes --> AK[/"Pass"/]
    AJ -- No --> AL[/"Fail"/]
    A --> AM{"Check vertical inner walls of evacuation routes"}
    AM --> AN{"Do vertical inner walls have EI 30?"}
    AN -- Yes --> AO{"Do access doors to these routes have EI1 30?"}
    AO -- Yes --> AP[/"Pass"/]
    AO -- No --> AQ[/"Fail"/]
    AN -- No --> AQ
    A --> AR{"Is <a href='http://example.com/firebimbuilding#HasDaytimeOccupancy' style='color:blue;'>Has daytime occupancy</a> true?"}
    AR -- Yes --> AS{"Get <a href='http://example.com/firebimbuilding#Area' style='color:blue;'>Area</a>"}
    AS --> AT{"<a href='http://example.com/firebimbuilding#Area' style='color:blue;'>Area</a> < 1250 m²?"}
    AT -- Yes --> AU[/"Exempt from EI 30 requirement"/]
    AT -- No --> AV{"<a href='http://example.com/firebimbuilding#Area' style='color:blue;'>Area</a> < 2500 m²?"}
    AV -- Yes --> AW{"Has automatic sprinkler system?"} & AX{"Has automatic fire detection?"} & AY{"Wall, ceiling, floor coverings meet fire reaction requirements?"}
    AW & AX & AY -- All Yes --> AZ[/"Exempt from EI 30 requirement"/]
    AW & AX & AY -- Any No --> BA[/"Not exempt from EI 30 requirement"/]
    AV -- No --> BA
    AR -- No --> BB{"Check evacuation of rooms with night occupancy"}
    BB --> BC{"Do vertical walls of evacuation routes have EI 30?"} & BD{"Do doors have EI1 30?"}
    BC & BD -- All Yes --> BE[/"Pass"/]
    BC & BD -- Any No --> BF{"Is it part of a building with commercial function?"}
    BF -- Yes --> BG[/"Exempt from requirement"/]
    BF -- No --> BH[/"Fail"/]
