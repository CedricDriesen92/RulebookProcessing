fro:Shape_Article_2_1_2
    a sh:NodeShape ;
    sh:targetClass fbo:Compartment ;
    sh:message "Een compartimenthoogte moet overeenstemmen met één bouwlaag, tenzij specifieke uitzonderingen van toepassing zijn (parking, duplex, triplex, technische lokalen, atrium). Zie KB Basisnormen Bijlage 2 Art. 2.1.2."@nl ;
    sh:or (
        # Hoofdregel: Hoogte compartiment = 1 bouwlaag
        [
            a sh:NodeShape ;
            sh:property [
                sh:path fro:numberOfStoreysSpanned ;
                sh:hasValue 1 ;
                sh:datatype xsd:integer ;
                sh:message "Hoofdregel: Hoogte van een compartiment stemt overeen met de hoogte van één bouwlaag."@nl ;
            ] ;
        ]
        # Uitzondering a: Parking met bouwlagen (zie 5.2)
        [
            a sh:NodeShape ;
            sh:property [
                sh:path rdf:type ;
                sh:hasValue fbo:MultiStoreyParkingCompartment ; # Assuming this type implies multiple storeys or specific rules
                # fro:referencesRegulationSection <fro:Article_5_2> ; # Metadata, not a direct SHACL constraint here
                sh:message "Uitzondering a: De parking met bouwlagen."@nl ;
            ] ;
        ]
        # Uitzondering b: Duplex
        [
            a sh:NodeShape ;
            sh:property [
                sh:path fro:numberOfStoreysSpanned ;
                sh:hasValue 2 ;
                sh:datatype xsd:integer ;
            ] ;
            sh:property [
                sh:path fro:internalConnectingStaircase ; # Assumes fro:internalConnectingStaircase links to a fbo:Staircase object
                sh:minCount 1 ; # Checks for the existence of at least one such staircase
            ] ;
            sh:property [
                sh:path fro:cumulativeStoreyAreaInM2 ;
                sh:maxInclusive 2500.0 ;
                sh:datatype xsd:decimal ;
            ] ;
            sh:message "Uitzondering b: Duplex (2 bouwlagen, interne trap, gecumuleerde opp. <= 2500 m²)."@nl ;
        ]
        # Uitzondering c: Triplex
        [
            a sh:NodeShape ;
            sh:property [
                sh:path fro:numberOfStoreysSpanned ;
                sh:hasValue 3 ;
                sh:datatype xsd:integer ;
            ] ;
            sh:property [
                sh:path fro:internalConnectingStaircase ;
                sh:minCount 1 ;
            ] ;
            sh:property [
                sh:path fro:cumulativeStoreyAreaInM2 ;
                sh:maxInclusive 300.0 ;
                sh:datatype xsd:decimal ;
            ] ;
            sh:property [
                sh:path fro:automaticFireDetectionSystem ; # Assumes this links to an instance of fro:AutomaticFireDetectionSystem
                sh:minCount 1 ; # Ensure at least one such system exists
                sh:node [ # The linked system(s) must conform to these properties
                    a sh:NodeShape ;
                    sh:property [ sh:path rdf:type ; sh:hasValue fro:AutomaticFireDetectionSystem ] ; # Explicit type check on the system
                    sh:property [ sh:path fro:detectionType ; sh:hasValue fro:TotalSurveillance ] ;
                    sh:property [ sh:path fro:providesAutomaticAlarmIndication ; sh:hasValue true ] ;
                    sh:property [ sh:path fro:hasRiskAdaptedDetectors ; sh:hasValue true ] ;
                ] ;
            ] ;
            sh:message "Uitzondering c: Triplex (3 bouwlagen, interne trap, gecumuleerde opp. <= 300 m², specifieke branddetectie)."@nl ;
        ]
        # Uitzondering d: Technische lokalen (zie 5.1.1)
        [
            a sh:NodeShape ;
            # fro:numberOfStoreysSpanned > 1 is implied if this exception is distinct from the main rule
            sh:property [
                sh:path fro:containsOnlyTechnicalRooms ; # Assumes a boolean property on the compartment
                sh:hasValue true ;
                # fro:referencesRegulationSection <fro:Article_5_1_1> ; # Metadata
                sh:message "Uitzondering d: Compartiment met enkel technische lokalen over meerdere bouwlagen."@nl ;
            ] ;
        ]
        # Uitzondering e: Atrium
        [
            a sh:NodeShape ;
            # fro:numberOfStoreysSpanned > 1 is implied
            sh:property [
                sh:path rdf:type ; # Compartment is of type AtriumCompartment
                sh:hasValue fbo:AtriumCompartment ;
            ] ;
            sh:or ( # The compartment must either have the systems or a ministerial exception
                [ # Standaard geval: beide systemen aanwezig
                    a sh:NodeShape ;
                    sh:property [
                        sh:path fro:automaticExtinguishingSystem ; # Assumes link to fbo:FireExtinguishingSystem
                        sh:minCount 1 ;
                    ] ;
                    sh:property [
                        sh:path fro:smokeAndHeatExtractionSystem ; # Assumes link to fbo:SmokeAndHeatExtractionSystem
                        sh:minCount 1 ;
                    ] ;
                ]
                [ # Ministeriële uitzondering
                    a sh:NodeShape ;
                    sh:property [
                        sh:path fro:hasMinisterialExceptionForAtriumSystems ; # Assumes a boolean property
                        sh:hasValue true ;
                    ] ;
                ]
            ) ;
            sh:message "Uitzondering e: Atrium over meerdere bouwlagen met vereiste systemen of ministeriële uitzondering."@nl ;
        ]
    ) .